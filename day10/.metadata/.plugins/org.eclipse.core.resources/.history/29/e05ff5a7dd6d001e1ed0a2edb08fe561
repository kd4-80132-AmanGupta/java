package com.assignment10q3;

import java.util.LinkedList;
import java.util.List;
import java.util.Scanner;

public class Test {
//	Create LinkedList<> of Employee. Perform add, delete, Ô¨Ånd, sort, edit functionality in a menu driven program. Refer hint below for edit/update
//	functionality:
	
	public static void main(String args[]) {
		
		List<Employee> listEmp = new LinkedList<>();
		Employee e;
		
		Scanner sc = new Scanner(System.in);
		int choice;
		
		do {
			System.out.println("0. Exit");
			System.out.println("1. Add Employee");
			System.out.println("2. delete Employee");
			System.out.println("3. Add Employee");
			System.out.println("4. Add Employee");
			System.out.println("5. Add Employee");
			System.out.println("enter your choice : ");
			choice = sc.nextInt();
			
			switch(choice) {
			
			case 1: e = new Employee();
			        e.acceptData(sc);
			        listEmp.add(e);
				break;
				
			case 2:System.out.println("Enter your id ");
			       int id = sc.nextInt();
			       Employee emp = new Employee();
			       emp.setEmpId(id);
			       listEmp.indexOf(emp);
				break;
				
			case 3:
				break;
				
			case 4:
				break;
				
			case 5:
				break;
				
		   default : System.out.println("invalid choice");
				break;
				
				
			}
			
		}while(choice!=0);
		
		
		
	}

}
